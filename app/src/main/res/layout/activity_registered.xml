<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.canplay.milk.view.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:navigationTitle="用户注册" />
    <LinearLayout
        android:layout_marginTop="49dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_rep_1_pic"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/right2"
            android:textSize="15sp"
            android:layout_marginLeft="19dp"
            android:layout_width="20dp"
            android:layout_height="25dp" />
        <com.canplay.milk.view.ClearEditText
            android:textSize="15.5sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text=""
            android:hint="手机号"
            android:id="@+id/et_phone"
            android:maxLength="11"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_rep_1_pic"
        android:gravity="center_vertical"
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/right3"
            android:textSize="15sp"
            android:layout_marginLeft="19dp"
            android:layout_width="20dp"
            android:layout_height="25dp" />
        <com.canplay.milk.view.ClearEditText
            android:textSize="15.5sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text=""
            android:hint="请输入6位数验证码"
            android:id="@+id/et_code"
            android:maxLength="6"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"/>

        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/login_selectors"
            android:gravity="center"
            android:padding="7dp"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_rep_1_pic"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/right1"
            android:textSize="15sp"
            android:layout_marginLeft="19dp"
            android:layout_width="20dp"
            android:layout_height="25dp" />
        <com.canplay.milk.view.ClearEditText
            android:textSize="15.5sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text=""
            android:inputType="textPassword"
            android:hint="输入密码（建议数字与字母结合）"
            android:id="@+id/et_pass"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_rep_1_pic"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/right1"
            android:textSize="15sp"
            android:layout_marginLeft="19dp"
            android:layout_width="20dp"
            android:layout_height="25dp" />
        <com.canplay.milk.view.ClearEditText
            android:textSize="15.5sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text=""
            android:inputType="textPassword"
            android:hint="再次确认密码"
            android:id="@+id/et_user"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"/>

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="7dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.canplay.milk.view.MCheckBox

            android:clickable="false"
            app:canNoClick="true"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_choose"
            app:drawablechoose="@drawable/btn_rep_sel"
            app:drawables="@drawable/btn_rep_nor"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/tv_registered"
            android:padding="5dp"
            android:text="同意某某泡奶机公司注册协议"
            android:textColor="@color/a0"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_selector"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>
