<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.canplay.milk.view.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:navigationTitle="修改密码" />
    <LinearLayout
        android:layout_marginTop="49dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_rep_1_pic"
        android:gravity="center_vertical"
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:orientation="horizontal">

        <com.canplay.milk.view.ClearEditText
            android:paddingLeft="6dp"
            android:textSize="15.5sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="number"
            android:text=""
            android:hint="输入手机号"
            android:id="@+id/et_phone"
            android:maxLength="11"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"/>

        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="90dp"
            android:layout_height="31dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/login_selectors"
            android:gravity="center"
            android:padding="7dp"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_rep_1_pic"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <com.canplay.milk.view.ClearEditText
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:textSize="15.5sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text=""
            android:maxLength="6"
            android:inputType="number"
            android:hint="输入6位数验证码"
            android:id="@+id/et_pass"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"/>
        <ImageView
            android:id="@+id/iv_check1"
            android:layout_marginRight="16dp"
            android:src="@drawable/btn_mtp_2_save"
            android:textSize="15sp"
            android:layout_marginLeft="19dp"
            android:layout_width="28dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_rep_1_pic"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <com.canplay.milk.view.ClearEditText
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:textSize="15.5sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text=""
            android:inputType="textPassword"
            android:hint="数字与字母结合（20位以内）"
            android:id="@+id/et_user"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"/>
        <ImageView
            android:id="@+id/iv_check2"
            android:layout_marginRight="16dp"
            android:src="@drawable/btn_mtp_2_save"
            android:textSize="15sp"
            android:layout_marginLeft="19dp"
            android:layout_width="28dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_rep_1_pic"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <com.canplay.milk.view.ClearEditText
            android:layout_weight="1"
            android:textSize="15.5sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text=""
            android:hint="确认密码"
            android:id="@+id/et_confirm"
            android:maxLength="11"
            android:textColor="#9fa0a0"
            android:textColorHint="#bdbdbd"/>
        <ImageView
            android:id="@+id/iv_check3"
            android:layout_marginRight="16dp"
            android:src="@drawable/btn_mtp_2_save"
            android:textSize="15sp"
            android:layout_marginLeft="19dp"
            android:layout_width="28dp"
            android:layout_height="25dp" />
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="12dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tv_hint"
            android:layout_marginRight="20dp"
            android:text="两次次输入密码不一致"
            android:textColor="@color/a0"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_selector"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>
